<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:id="@+id/partitionviewheaderLinearLayout1">

		<Spinner
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_marginLeft="10dp"
			android:id="@+id/part_disk_spinner"
			android:layout_marginRight="10dp"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Model :"
		android:layout_below="@id/partitionviewheaderLinearLayout1"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="4dp"
		android:textStyle="bold"
		android:textColor="@color/textColorDark"
		android:id="@+id/partitionviewheaderTextView1"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Text"
		android:layout_toRightOf="@id/partitionviewheaderTextView1"
		android:layout_below="@id/partitionviewheaderLinearLayout1"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="10dp"
		android:id="@+id/disk_model"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Partition Table :"
		android:layout_below="@id/partitionviewheaderTextView1"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="4dp"
		android:textStyle="bold"
		android:textColor="@color/textColorDark"
		android:id="@+id/partitionviewheaderTextView2"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Text"
		android:layout_toRightOf="@id/partitionviewheaderTextView2"
		android:layout_below="@id/disk_model"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="4dp"
		android:id="@+id/part_table"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Sector Size :"
		android:layout_below="@id/partitionviewheaderTextView2"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="10dp"
		android:textStyle="bold"
		android:textColor="@color/textColorDark"
		android:id="@+id/partitionviewheaderTextView3"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Text"
		android:layout_toRightOf="@id/partitionviewheaderTextView3"
		android:layout_below="@id/part_table"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="10dp"
		android:id="@+id/sector_size"/>

</RelativeLayout>

