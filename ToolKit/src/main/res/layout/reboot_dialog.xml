<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_gravity="center_vertical"
	android:gravity="center_vertical">

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Power off"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:textStyle="bold"
		android:paddingLeft="8dp"
		android:id="@+id/power_off"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Reboot"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:paddingLeft="8dp"
		android:textStyle="bold"
		android:id="@+id/reboot_button"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Recovery"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:paddingLeft="8dp"
		android:textStyle="bold"
		android:id="@+id/reboot_recovery"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Bootloader"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:paddingLeft="8dp"
		android:textStyle="bold"
		android:id="@+id/reboot_bootloader"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Soft reboot"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:paddingLeft="8dp"
		android:textStyle="bold"
		android:id="@+id/soft_reboot"/>

	<RadioButton
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Reastart SystemUi"
		android:layout_marginBottom="6dp"
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:paddingLeft="8dp"
		android:textStyle="bold"
		android:id="@+id/system_ui_restart"/>

</RadioGroup>

