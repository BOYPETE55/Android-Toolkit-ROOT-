<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Xda official thread :"
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:id="@+id/xda_link"
					android:layout_marginBottom="12dp"
					android:layout_marginRight="10dp"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Find me on :"
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:id="@+id/find_me"
					android:layout_marginRight="10dp"
					android:layout_marginTop="6dp"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="want to donate me ?"
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:id="@+id/donate_me"
					android:layout_marginRight="10dp"
					android:layout_marginTop="6dp"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:id="@+id/donate_me_paytm"
					android:layout_marginRight="10dp"
					android:layout_marginTop="12dp"
					android:textColor="@color/colorPrimary"
					android:text="Paytm QR code"
					android:layout_marginBottom="12dp"
					android:textStyle="bold"
					android:background="?android:attr/selectableItemBackground"
					android:padding="10dp"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Libraries used :"
			android:layout_margin="10dp"
			android:textStyle="bold"
			android:textSize="15sp"
			android:textColor="@color/colorPrimary"/>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="?android:attr/selectableItemBackground"
				android:id="@+id/lib_su_license">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="libsuperuser"
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="10dp"
					android:text="Copyright © Jorrit Chainfire Jongma\nApache License, Version 2.0\nhttps://github.com/Chainfire/libsuperuser"
					android:layout_marginBottom="15dp"
					android:textColor="@color/textColorDark"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:id="@+id/fab_license"
				android:background="?android:attr/selectableItemBackground">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Floating Action Button "
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="10dp"
					android:text="Copyright © Dmytro Tarianyk\nApache License, Version 2.0\nhttps://github.com/Clans/FloatingActionButton"
					android:layout_marginBottom="15dp"
					android:textColor="@color/textColorDark"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardUseCompatPadding="true"
			app:cardElevation="3dp"
			app:cardCornerRadius="2dp"
			android:descendantFocusability="blocksDescendants">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="?android:attr/selectableItemBackground"
				android:id="@+id/filpicker_license">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="FilePicker Dialog"
					android:layout_margin="10dp"
					android:textStyle="bold"
					android:textSize="15sp"
					android:textColor="@color/colorPrimary"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="10dp"
					android:text="Copyright © Angad Singh\nApache License, Version 2.0\nhttps://github.com/Angads25/android-filepicker"
					android:layout_marginBottom="15dp"
					android:textColor="@color/textColorDark"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>

</ScrollView>

