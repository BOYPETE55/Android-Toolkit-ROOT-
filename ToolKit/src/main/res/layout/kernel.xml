<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardUseCompatPadding="true"
				app:cardElevation="3dp"
				app:cardCornerRadius="2dp"
				android:descendantFocusability="blocksDescendants">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="click on + button for actions"
					android:layout_marginBottom="15dp"
					android:layout_marginTop="15dp"
					android:layout_marginLeft="8dp"
					android:textColor="@color/textColorDark"
					android:layout_marginRight="15dp"/>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardUseCompatPadding="true"
				app:cardElevation="3dp"
				app:cardCornerRadius="2dp"
				android:descendantFocusability="blocksDescendants">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="What is a kernel ?"
						android:layout_marginBottom="8dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="8dp"
						android:textStyle="bold"
						android:textColor="@color/colorPrimary"
						android:layout_marginRight="15dp"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="15dp"
						android:textColor="@color/textColorDark"
						android:layout_marginBottom="15dp"
						android:textIsSelectable="true"
						android:text="A kernel is the essential center of a computer operating system, that acts as a connector between hardware and software of a computer.\nsometimes it is refered as heart of a system."
						android:textSize="16sp"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardUseCompatPadding="true"
				app:cardElevation="3dp"
				app:cardCornerRadius="2dp"
				android:descendantFocusability="blocksDescendants">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="About android kernel"
						android:layout_marginBottom="8dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="8dp"
						android:textStyle="bold"
						android:textColor="@color/colorPrimary"
						android:layout_marginRight="15dp"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="15dp"
						android:textColor="@color/textColorDark"
						android:layout_marginBottom="15dp"
						android:textIsSelectable="true"
						android:text="Android is a mobile operating system, based on a modified version of the Linux kernel.\nevery android device will have its own kernel which can never be used on other device without required modifications."
						android:textSize="16sp"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardUseCompatPadding="true"
				app:cardElevation="3dp"
				app:cardCornerRadius="2dp"
				android:descendantFocusability="blocksDescendants">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="Current running kernel :"
						android:layout_marginBottom="8dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="8dp"
						android:textStyle="bold"
						android:textColor="@color/colorPrimary"
						android:layout_marginRight="15dp"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="15dp"
						android:textColor="@color/textColorDark"
						android:id="@+id/current_kernel"
						android:layout_marginBottom="15dp"
						android:textIsSelectable="true"
						android:textSize="16sp"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardUseCompatPadding="true"
				app:cardElevation="3dp"
				app:cardCornerRadius="2dp"
				android:descendantFocusability="blocksDescendants">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:background="?android:attr/selectableItemBackground"
					android:orientation="vertical"
					android:id="@+id/kernel_backup_location">

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:text="kernel backup directory :"
						android:layout_marginBottom="8dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="8dp"
						android:textStyle="bold"
						android:textColor="@color/colorPrimary"
						android:layout_marginRight="15dp"/>

					<TextView
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="15dp"
						android:textColor="@color/textColorDark"
						android:id="@+id/kern_backup_dir"
						android:layout_marginBottom="15dp"
						android:textSize="16sp"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

		</LinearLayout>

	</ScrollView>

	<com.github.clans.fab.FloatingActionMenu
		android:id="@+id/menu_kernel"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:paddingRight="30dp"
		android:paddingBottom="30dp"
		fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
		fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
		fab:menu_shadowColor="#444"
		fab:menu_backgroundColor="#44000000"
		fab:menu_buttonSpacing="5dp"
		fab:menu_colorNormal="#0096FF"
		fab:menu_colorPressed="#0066FF"
		fab:menu_colorRipple="#01D3FF">

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/kern_backup"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_backup"
			fab:fab_size="mini"
			fab:fab_label="Backup"
			fab:fab_colorNormal="#00E112"
			fab:fab_colorPressed="#00B32C"
			fab:fab_colorRipple="#7FFF01"/>

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/kern_restore"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_restore"
			fab:fab_label="Restore"
			fab:fab_size="mini"
			fab:fab_colorNormal="#F1FF01"
			fab:fab_colorPressed="#FFE202"
			fab:fab_colorRipple="#C0FF00"/>

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/kern_install"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_install"
			fab:fab_label="Install"
			fab:fab_size="mini"
			fab:fab_colorNormal="#FF0F00"
			fab:fab_colorPressed="#FF5F02"
			fab:fab_colorRipple="#FFB801"/>

	</com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>

