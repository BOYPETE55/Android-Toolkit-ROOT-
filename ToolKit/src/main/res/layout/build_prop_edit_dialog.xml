<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/prop_content">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Property :-"
			android:textSize="16sp"
			android:textColor="#000000"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="18dp"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="18dp"
			android:layout_marginRight="10dp"
			android:paddingTop="10dp"
			android:textSize="15sp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:id="@+id/prop_text"
			android:paddingBottom="14dp"
			android:visibility="gone"/>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:ems="10"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp"
			android:id="@+id/build_edit_prop"
			android:singleLine="true"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Value :-"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:textColor="#000000"
			android:textSize="16sp"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="18dp"
			android:layout_marginRight="10dp"
			android:paddingTop="10dp"
			android:textSize="15sp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:id="@+id/val_text"
			android:paddingBottom="10dp"
			android:visibility="gone"/>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:ems="10"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp"
			android:id="@+id/build_edit_value"
			android:maxLines="1"
			android:singleLine="true"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Are you sure you want to save the changes..?"
		android:textColor="#000000"
		android:textSize="16sp"
		android:singleLine="false"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="14dp"
		android:paddingTop="18dp"
		android:layout_marginBottom="10dp"
		android:id="@+id/confirm_txt"
		android:textStyle="bold"
		android:visibility="gone"/>

</LinearLayout>

